                         android:background="@color/colorPrimary" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_12dp"
                            android:background="@drawable/pan_card_svg" />

                        <customfonts.TextView_Roboto_regularcondensed
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Upload Your Pan Card"
                            android:textColor="@color/carmine"
                            android:textSize="@dimen/dimen_17sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivPan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/dimen_75dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_15dp"
                        android:background="@color/gray_50"
                        android:clickable="true"
                        android:elevation="@dimen/dimen_4dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="@dimen/dimen_5dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/camera_svg" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@color/white"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:orientation="vertical">


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:background="@color/gray_300" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbTermsCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/terms_amp_conditions"
                    android:textSize="17sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

    <customfonts.MyTextView_Roboto_Medium
        android:id="@+id/btSubmitUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/corner_button_background"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_20sp" />

</RelativeLayout>


