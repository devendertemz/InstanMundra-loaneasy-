<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="7">

    <ImageView
        android:id="@+id/ivbg"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/phone_bg" />

    <customfonts.TextView_Roboto_regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:text="Official details"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btSubmitUserInfo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dimen_65dp"
        android:layout_marginRight="15dp"
        android:elevation="@dimen/dimen_4dp"
        android:scrollbars="none">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5dp"
            app:cardCornerRadius="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customfonts.TextView_Roboto_light
                    android:id="@+id/tvNameWlcm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Please update the employment details below"
                    android:textColor="@color/gray_700"
                    android:textSize="@dimen/dimen_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:elevation="@dimen/dimen_4dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_CompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:theme="@style/TextLabel">

                        <EditText
                            android:id="@+id/etCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/icon_organization_25"
                            android:drawableLeft="@drawable/icon_organization_25"
                            android:drawablePadding="@dimen/dimen_5dp"
                            android:focusable="true"
                            android:textSize="@dimen/dimen_17sp"
                            android:focusableInTouchMode="true"
                            android:hint="Organization Name"
                            android:inputType="textCapCharacters"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="12dp"
                            android:textColor="@color/black"
                            android:theme="@style/ThemeEditText3" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- <View
                         android:layout_width="match_parent"
                         android:layout_height="1dp"
                         android:layout_marginLeft="@dimen/dimen_12dp"
                         android:layout_marginRight="@dimen/dimen_12dp"
                         android:background="@color/colorPrimary" />-->

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_CompanyAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:theme="@style/TextLabel">

                        <EditText
                            android:id="@+id/etCompanyAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/icon_company_address_25"
                            android:drawableLeft="@drawable/icon_company_address_25"
                            android:drawablePadding="@dimen/dimen_5dp"
                            android:focusable="true"
                            android:textSize="@dimen/dimen_17sp"
                            android:focusableInTouchMode="true"
                            android:hint="Organization Address"
                            android:inputType="textCapCharacters"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="12dp"
                            android:textColor="@color/black"
                            android:theme="@style/ThemeEditText3" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--<View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        android:layout_marginRight="@dimen/dimen_12dp"
                        android:background="@color/colorPrimary" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <customfonts.TextView_Roboto_regularcondensed
                            android:id="@+id/tvEmpTypeText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="Employment Type"
                            android:textColor="@color/carmine"
                            android:textSize="17sp" />

                        <customfonts.TextView_Roboto_regularcondensed
                            android:id="@+id/tvWorkingYearsText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text="Working years"
                            android:textColor="@color/carmine"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <FrameLayout
                            android:layout_width="@dimen/dimen_60dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spEmpType"
                                style="@style/spinner_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:dropDownVerticalOffset="50dp"
                                android:spinnerMode="dropdown"
                                android:theme="@style/ThemeSpinner"
                                app:backgroundTint="@color/carmine" />
                        </FrameLayout>

                        <!--<android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spSalary"
                            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:dropDownVerticalOffset="50dp"
                            android:spinnerMode="dropdown"
                            app:backgroundTint="@color/gray_light" />-->

                        <FrameLayout
                            android:layout_width="@dimen/dimen_60dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spWorkingYearOrg"
                                style="@style/spinner_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:dropDownVerticalOffset="50dp"
                                android:spinnerMode="dropdown"
                                android:theme="@style/ThemeSpinner"
                                app:backgroundTint="@color/carmine" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <customfonts.TextView_Roboto_regularcondensed
                            android:id="@+id/tvSalaryModeText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_6dp"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text="Mode of salary"
                            android:textColor="@color/carmine"
                            android:textSize="17sp" />

                        <customfonts.TextView_Roboto_regularcondensed
                            android:id="@+id/tvTakeHomeSalaryText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="Take Home Salary"
                            android:textColor="@color/carmine"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <FrameLayout
                            android:layout_width="@dimen/dimen_60dp"
                            android:layout_height="@dimen/dimen_40dp"
