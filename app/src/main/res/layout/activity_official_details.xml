                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:dropDownVerticalOffset="50dp"
                                android:spinnerMode="dropdown"
                                android:theme="@style/ThemeSpinner"
                                app:backgroundTint="@color/carmine">

                            </androidx.appcompat.widget.AppCompatSpinner>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="@dimen/dimen_60dp"
                            android:layout_height="@dimen/dimen_40dp"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle">

                            <EditText
                                android:id="@+id/etTakeHomeSalary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/ThemeEditText2"
                                android:layout_marginTop="@dimen/dimen_3dp"
                                android:layout_marginRight="10dp"
                                android:hint="salary"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_15sp"
                                android:textCursorDrawable="@drawable/color_cursor"
                                />
                        </FrameLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_HrPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:theme="@style/TextLabel">

                            <EditText
                                android:id="@+id/etHrPhoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/dimen_5dp"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:inputType="number"
                                android:maxLength="10"
                                android:textSize="@dimen/dimen_17sp"
                                android:hint="Please enter your Company HR number"
                                android:maxLines="1"
                                android:paddingLeft="5dp"
                                android:paddingTop="10dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="12dp"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/white"
                                android:theme="@style/ThemeEditText" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_HrEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:theme="@style/TextLabel">

                            <EditText
                                android:id="@+id/etHrEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/dimen_5dp"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:inputType="textEmailAddress"
                                android:maxLength="50"
                                android:textSize="@dimen/dimen_17sp"
                                android:hint="Please enter your company email"
                                android:maxLines="1"
                                android:paddingLeft="5dp"
                                android:paddingTop="10dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="12dp"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/white"
                                android:theme="@style/ThemeEditText" />

                        </com.google.android.material.textfield.TextInputLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:elevation="@dimen/dimen_4dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_12dp"
                            android:background="@drawable/pan_card_svg" />

                        <customfonts.TextView_Roboto_regularcondensed
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Upload Your Employer ID Card"
                            android:textColor="@color/carmine"
                            android:textSize="@dimen/dimen_17sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivEmpID"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="@dimen/dimen_75dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_15dp"
                        android:background="@color/gray_50"
                        android:clickable="true"
                        android:elevation="@dimen/dimen_4dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="@dimen/dimen_5dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/camera_svg" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/dimen_4dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:orientation="vertical">


                    <customfonts.TextView_Roboto_regularcondensed
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dimen_17sp"
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dimen_2dp"
                        android:textColor="@color/carmine"
                        android:text="Please select document for address proof"/>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40dp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:background="@drawable/rectangle">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spAddressProof"
                            style="@style/spinner_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:dropDownVerticalOffset="50dp"
                            android:spinnerMode="dropdown"
                            android:theme="@style/ThemeSpinner"
                            app:backgroundTint="@color/carmine">

                        </androidx.appcompat.widget.AppCompatSpinner>

                    </FrameLayout>




                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_Aadhar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:theme="@style/TextLabel">

                        <customfonts.EditText_Roboto_Light
                            android:id="@+id/etAadharCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_5dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:inputType="textCapCharacters"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:textSize="@dimen/dimen_17sp"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="12dp"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/gray_600"
                            android:theme="@style/ThemeEditText" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--<View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dimen_12dp"
                        android:layout_marginRight="@dimen/dimen_12dp"
                        android:background="@color/colorPrimary" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_12dp"
                            android:background="@drawable/id_card_svg"/>

                        <customfonts.TextView_Roboto_regularcondensed
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:id="@+id/tvAddressType"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/carmine"
                            android:textSize="@dimen/dimen_17sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_15dp"
                        >

                        <LinearLayout
                            android:id="@+id/ly1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_70dp"
                            android:orientation="vertical">

                            <customfonts.TextView_Roboto_light
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/carmine"
                                android:text="Front"/>

                            <ImageView
                                android:id="@+id/ivAdharFront"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="@dimen/dimen_15dp"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:layout_marginBottom="@dimen/dimen_15dp"
                                android:background="@color/gray_50"
                                android:clickable="true"
                                android:elevation="@dimen/dimen_4dp"
                                android:foreground="?attr/selectableItemBackground"
                                android:padding="@dimen/dimen_5dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/camera_svg"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_toRightOf="@id/ly1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_30dp"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:orientation="vertical">

                            <customfonts.TextView_Roboto_light
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/carmine"
                                android:text="Back"/>

                            <ImageView
                                android:id="@+id/ivAdharBack"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:layout_marginBottom="@dimen/dimen_15dp"
                                android:background="@color/gray_50"
                                android:clickable="true"
                                android:elevation="@dimen/dimen_4dp"
                                android:foreground="?attr/selectableItemBackground"
                                android:padding="@dimen/dimen_5dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/camera_svg"
                                tools:ignore="VectorDrawableCompat" />

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:elevation="@dimen/dimen_4dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_Pancard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:theme="@style/TextLabel">

                        <customfonts.EditText_Roboto_Light
                            android:id="@+id/etPanCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_5dp"
                            android:focusable="true"
