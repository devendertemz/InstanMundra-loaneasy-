<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivDialog"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/document" />

            <RelativeLayout
                android:id="@+id/ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivDialog"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:orientation="horizontal">

                <customfonts.TextView_Roboto_condensed_bold
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:text="Upload your banking, Last 3 salary slip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_below="@id/tv">


                    <customfonts.TextView_Roboto_light_condensed
                        android:id="@+id/tvOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:paddingLeft="@dimen/dimen_35dp"
                        android:paddingTop="@dimen/dimen_8dp"
                        android:paddingRight="@dimen/dimen_35dp"
                        android:paddingBottom="@dimen/dimen_8dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:text="OK"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14sp" />


                    <customfonts.TextView_Roboto_light_condensed
                        android:id="@+id/tvCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:paddingLeft="@dimen/dimen_35dp"
                        android:paddingTop="@dimen/dimen_8dp"
                        android:paddingRight="@dimen/dimen_35dp"
                        android:paddingBottom="@dimen/dimen_8dp"
                        android:text="cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>



            </RelativeLayout>
        </RelativeLayout>
</LinearLayout>