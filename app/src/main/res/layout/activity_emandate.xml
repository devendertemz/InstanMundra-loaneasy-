<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7">

    <FrameLayout
        android:id="@+id/rlimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/phone_bg" />

    </FrameLayout>


    <ScrollView
        android:layout_above="@+id/btSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:paddingBottom="@dimen/dimen_8dp"
        android:layout_marginRight="15dp"
        android:fillViewport="true"
        android:elevation="@dimen/dimen_4dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tvNameWlcm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_15dp">

                <RadioGroup
                    android:id="@+id/groupradio"
                    android:layout_marginLeft="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="@dimen/dimen_10dp">

                        <RadioButton
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio_netbanking"
                            android:text="Net Banking"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:textColor="@color/white"
                            android:layout_weight="1"
                            android:textSize="20dp"/>

                        <RadioButton
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/radio_debit"
                            android:text="Debit Card"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:textColor="@color/white"
                            android:checked="false"
                            android:layout_weight="1"
                            android:textSize="20dp"/>

                    </LinearLayout>

                </RadioGroup>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height=".5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:background="@color/gray_400" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAxis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/dimen_1dp"
                app:cardCornerRadius="@dimen/dimen_2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivAxis"
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        app:srcCompat="@drawable/axisbank" />

                    <customfonts.TextView_Roboto_regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_toRightOf="@id/ivAxis"
                        android:drawablePadding="@dimen/dimen_5dp"
                        android:padding="10dp"
                        android:text="Axis"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_18sp" />

                    <ImageView
                        android:id="@+id/ivCheckAxis"
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        app:srcCompat="@drawable/ic_circle_svg" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardHdfc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:elevation="@dimen/dimen_1dp"
                app:cardCornerRadius="@dimen/dimen_2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHdfc"
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        app:srcCompat="@drawable/hdfc" />

                    <customfonts.TextView_Roboto_regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_toRightOf="@id/ivHdfc"
                        android:drawablePadding="@dimen/dimen_5dp"
                        android:padding="10dp"
                        android:text="HDFC"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_18sp" />

                    <ImageView
                        android:id="@+id/ivCheckHdfc"
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        app:srcCompat="@drawable/ic_circle_svg" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardIcici"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:elevation="@dimen/dimen_1dp"
                app:cardCornerRadius="@dimen/dimen_2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivIcici"
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        app:srcCompat="@drawable/icici" />

                    <customfonts.TextView_Roboto_regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_toRightOf="@id/ivIcici"
                        android:drawablePadding="@dimen/dimen_5dp"
                        android:padding="10dp"
                        android:text="ICICI"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_18sp" />

                    <ImageView
                        android:id="@+id/ivCheckicici"
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        app:srcCompat="@drawable/ic_circle_svg" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSbi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:elevation="@dimen/dimen_1dp"
                app:cardCornerRadius="@dimen/dimen_2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivSbi"
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="@dimen/dimen_50dp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        app:srcCompat="@drawable/sbi" />

                    <customfonts.TextView_Roboto_regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_toRightOf="@id/ivSbi"
                        android:drawablePadding="@dimen/dimen_5dp"
                        android:padding="10dp"
                        android:text="SBI"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_18sp" />

                    <ImageView
                        android:id="@+id/ivCheckSbi"
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimen_20dp"
                        app:srcCompat="@drawable/ic_circle_svg" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOthers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:elevation="@dimen/dimen_1dp"
                app:cardCornerRadius="@dimen/dimen_2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <customfonts.TextView_Roboto_regular
                            android:id="@+id/etBankName2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:drawablePadding="@dimen/dimen_5dp"
                            android:padding="10dp"
                            android:text="Others"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_18sp" />

                        <ImageView
                            android:id="@+id/ivCheckOthers"
                            android:layout_width="@dimen/dimen_25dp"
                            android:layout_height="@dimen/dimen_25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dimen_20dp"
                            app:srcCompat="@drawable/ic_circle_svg"
                            tools:ignore="VectorDrawableCompat" />

                    </RelativeLayout>

                    <Spinner
                        android:id="@+id/spBankName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone"
                        android:layout_margin="@dimen/dimen_10dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="wrap_content"
                android:layout_height=".5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:background="@color/gray_400" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:background="@drawable/translucent_bg"
                android:elevation="@dimen/dimen_3dp"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_accnName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:theme="@style/TextLabel">

                    <customfonts.EditText_Roboto_Light
                        android:id="@+id/etAccountHolderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Account Holder Name"
                        android:inputType="textCapCharacters"
                        android:maxLength="100"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_17sp"
                        android:theme="@style/ThemeEditText" />
                    <!-- <View
                         android:layout_width="wrap_content"
                         android:layout_height="1dp"
                         android:layout_centerVertical="true"
                         android:background="@color/gray_700"/>-->
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_CompanyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:theme="@style/TextLabel">

                    <customfonts.EditText_Roboto_Light
                        android:id="@+id/etAccountNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Account number"
                        android:inputType="number"
                        android:maxLength="16"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_17sp"
                        android:theme="@style/ThemeEditText" />
                    <!-- <View
                         android:layout_width="wrap_content"
                         android:layout_height="1dp"
                         android:layout_centerVertical="true"
                         android:background="@color/gray_700"/>-->
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:theme="@style/TextLabel">

                    <customfonts.EditText_Roboto_Light
                        android:id="@+id/etIfsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="IFSC"
                        android:inputType="textCapCharacters"
                        android:maxLength="11"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_17sp"
                        android:theme="@style/ThemeEditText" />



                    <!--<View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/gray_700"/>-->
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spAccType"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:dropDownVerticalOffset="50dp"
                    android:spinnerMode="dropdown"
                    app:backgroundTint="@color/colorPrimary" />

            </LinearLayout>


            <Button
                android:id="@+id/btSubmitBankDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_button_background"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20sp"
                />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>