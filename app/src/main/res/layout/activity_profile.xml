<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DrawerItems.ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCompl"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:elevation="@dimen/dimen_3dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:padding="@dimen/dimen_6dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_back_white"/>

            <customfonts.TextView_Roboto_regular
                android:layout_toRightOf="@id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_25dp"
                android:layout_centerVertical="true"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/frameNoProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:background="@drawable/shape_button_background"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/dimen_3dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_30dp"
                android:orientation="vertical">

                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="No profile found !"
                    android:textColor="@color/colorTex"
                    android:textSize="@dimen/dimen_25sp" />

                <customfonts.TextView_Roboto_regular
                    android:id="@+id/tvCreateProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:background="@drawable/shape_button_back_square"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Create profile"
                    android:textSize="@dimen/dimen_20sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ScrollView
            android:id="@+id/frameProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_100"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:elevation="@dimen/dimen_1dp"
                    android:orientation="vertical">

                    <!--<customfonts.TextView_Roboto_regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:text="Profile"
                        android:textSize="@dimen/dimen_22sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:background="@color/gray_100" />-->

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp"
                        >

                        <customfonts.TextView_Roboto_regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="@dimen/dimen_16sp"/>

                        <customfonts.TextView_Roboto_regular
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textSize="@dimen/dimen_18sp"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:background="@color/gray_100" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp"
                        >

                        <customfonts.TextView_Roboto_regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of birth"
                            android:textSize="@dimen/dimen_16sp"/>

                        <customfonts.TextView_Roboto_regular
                            android:id="@+id/tvDOB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="--"
                            android:textSize="@dimen/dimen_18sp"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:background="@color/gray_100" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp"
                        >

                        <customfonts.TextView_Roboto_regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile number"
                            android:textSize="@dimen/dimen_16sp"/>


                            <customfonts.TextView_Roboto_regular
                                android:id="@+id/tvMobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:layout_alignParentRight="true"
                                android:drawablePadding="@dimen/dimen_4dp"
                                android:drawableRight="@drawable/ic_edit_black_24dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_18sp"/>


                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:background="@color/gray_100" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_10dp">

                        <customfonts.TextView_Roboto_regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="@dimen/dimen_16sp" />

                        <customfonts.TextView_Roboto_regular
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@drawable/ic_edit_black_24dp"
                            android:drawablePadding="@dimen/dimen_4dp"
                            android:text="--"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_18sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@color/white"
                    android:elevation="@dimen/dimen_1dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_marginRight="@dimen/dimen_15dp"
                        app:srcCompat="@drawable/ic_edit_black_24dp"
                        android:layout_gravity="right"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <customfonts.EditText_Roboto_Light
                            android:id="@+id/etProfilePinCode"
                            android:layout_width="0dp"
                            android:textSize="@dimen/dimen_15dp"
                            android:layout_height="match_parent"
                            android:theme="@style/TextLabel"
                            android:textColor="@color/black"
android:textColorHint="@color/black"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/black_border"
                            android:hint="Pin Code"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:padding="5dp" />

                        <customfonts.EditText_Roboto_Light
                            android:id="@+id/etCity"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:theme="@style/TextLabel"
                            android:layout_weight="1"
                            android:background="@drawable/black_border"
                            android:hint="City"
                            android:textColor="@color/black"

                            android:textSize="@dimen/dimen_15dp"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="5dp" />

                        <customfonts.EditText_Roboto_Light
                            android:id="@+id/etState"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"

                            android:textSize="@dimen/dimen_15dp"
                            android:theme="@style/TextLabel"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/black_border"
                            android:hint="State"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black"

                            android:padding="5dp" />

                    </LinearLayout>


                    <EditText
                        android:id="@+id/etLocalAddress"
                        android:layout_width="match_parent"

                        android:textSize="@dimen/dimen_15dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_height="40dp"
                        android:theme="@style/TextLabel"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Local Address"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="5dp" />


                </LinearLayout>


                        <Button
                            android:id="@+id/btSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_30dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="80dp"
                            android:layout_marginTop="@dimen/dimen_30dp"
                            android:background="@drawable/corner_button_background"
                            android:text="@string/bt_submitPhoneNo"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:textSize="17sp" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>