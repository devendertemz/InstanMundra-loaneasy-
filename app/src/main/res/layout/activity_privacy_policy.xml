<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DrawerItems.PrivacyPolicy">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_12dp"
        android:elevation="@dimen/dimen_4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="In Instant Mudra., we ask for and use your personal information and are committed to keep this information secure. This policy talks about why we ask for personal information and how we keep it secure. Please note that during the course of your relationship with us, you will be given more of such information. We request you to please consider it carefully. We also request you to review our privacy policy from time to time because your use of our products and services implies your acceptance of the prevailing Privacy Policy"
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>



                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:text="Information we collect from you"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_600"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    />

                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="We will ask you for certain personal and financial information like your name, address, date of birth, PAN no., bank statements, pay slips, etc. We will also collect credit related information that is collected from other sources like the credit bureau. Apart from this we might collect information from you electronically - like the pages viewed, how you navigate through the website and interact with webpages, etc."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>


                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="The information we collect about you will depend on the products and services we offer. If you do not allow us to collect all the information we request, we may not be able to deliver all of these services effectively."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:text="How we will use this information"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp"/>

                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="We will use this information to establish identity and assess applications, design our products, manage our relationship with you, offer our products and services, manage our risks including the risk of fraud, get in touch with you, improve our business for us and our customer, comply with country laws and inform you about other products or services we think you might find of some use. We may also collect and use this information in other ways permitted by law."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>


                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="We will take utmost care to ensure that your personal information is not shared with the public and that your transactions on the Website are confidential. If we use any third parties for any of these transactions we will also make sure that confidentiality is maintained."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>

                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="We may also provide personal information about our customers to other organizations. We will ensure that any personal information we disclose to them is only used for the specific task we ask them to perform."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>


                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:text="Cookies"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_600"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    />

                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="Cookies are small data files that a website stores on your computer. We will use cookies on our website similar to other lending websites and online marketplace websites. Use of this information helps us identify you in order to make our web portal more user friendly. We might also use this information to display advertising from third party companies. Most browsers will let you decline cookies but if you choose to do this it might affect service on some parts of our website."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>


                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="We might also use other technology to track how you interact with our portal and employ some third party agencies to use the data on our behalf."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>



                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:text="Information security"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_600"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    />


                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="We store and process your personal information with us. We protect your information using physical, technical, and administrative security measures to reduce the risks of loss, misuse, unauthorized access, disclosure and alteration. Some of the safeguards we use are firewalls and data encryption using SSL, and information access authorization controls."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>

                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="However, you understand and accept that there’s no guarantee that data transmission over the Internet will be completely secure and that any information that you transmit to us is at your own risk."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>


                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:text="Third party websites"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_600"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    />

                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="With this policy we’re only addressing the disclosure and use of data collected by us. If you visit any websites through the links on Instant Mudra.. website please ensure you go through the privacy policies of each of those websites. Their data collection practices and their policies might be different from this policy and Instant Mudra. does not have control over any of their policies."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:text="Disclosure"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_600"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    />

                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="During the course of operations and our relationship with you we might disclose your information to third parties associated with Instant Mudra. and the government and other judicial bodies mandated by the law and in order to comply with legal obligations."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>

                <customfonts.TextView_Roboto_regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:text="If you have any questions or concerns about our privacy policy please contact us at info@chintamanifinlease.com and we will be happy to assist you."
                    android:textColor="@color/gray_800"
                    android:textSize="@dimen/dimen_15sp"/>



            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>