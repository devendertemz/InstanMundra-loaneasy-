<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    android:layout_gravity="center"
    android:foregroundGravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
       >



        <LinearLayout
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/dimen_10dp"
            android:background="@drawable/rectangle"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:textColor="@color/black"
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/dimen_18sp"
                    android:drawableLeft="@drawable/cheked_icon_20"
                    android:text="ACTIVE LOAN"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tvDueDate"
                    android:gravity="right"
                    android:textSize="@dimen/dimen_15sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:text="Due: "/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLoanAmount"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Rs."
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18dp" />

            <customfonts.TextView_Roboto_regularcondensed
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_800"
                android:textSize="@dimen/dimen_15sp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Paying EMI on time is the best way to improve your credit score. Don't miss your loan repayment."/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:gravity="right"
                android:orientation="horizontal">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="@dimen/dimen_14dp"
                    android:id="@+id/btLoanDetails"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@drawable/corner_button_background"
                    android:text="LOAN DETAILS"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Pay Now"
                    android:id="@+id/btPayNow"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14sp"
                    android:background="@drawable/corner_button_background"/>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>