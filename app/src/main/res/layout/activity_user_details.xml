<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_200"
    tools:context=".user_details.UserDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:elevation="@dimen/dimen_3dp"
        android:background="@color/white"
        android:layout_height="100dp">

        <RelativeLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_2dp"
            android:paddingBottom="@dimen/dimen_2dp"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:orientation="horizontal"  >

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_centerVertical="true"
                android:background="@color/gray_400"/>

            <ImageView
                android:id="@+id/icon_1"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                app:srcCompat="@drawable/ic_1"/>

            <ImageView
                android:id="@+id/icon_2"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_2"/>

            <ImageView
                android:id="@+id/icon_3"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_3"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly2"
            android:layout_below="@id/ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginTop="@dimen/dimen_5dp"

            android:orientation="horizontal"  >


            <customfonts.TextView_Roboto_light
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal\nDetails"
                android:textSize="@dimen/dimen_12sp"
                />

            <customfonts.TextView_Roboto_light
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Official\nDetails"
                android:textSize="@dimen/dimen_12sp"
                />

            <customfonts.TextView_Roboto_light
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Bank\nDetails"
                android:textSize="@dimen/dimen_12sp"
                />




        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/containerUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"/>


</LinearLayout>