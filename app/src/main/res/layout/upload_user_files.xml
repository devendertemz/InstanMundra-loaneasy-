<?xml version="1.0" encoding="utf-8"?>



<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
   >
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_75dp"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5dp"
        app:cardCornerRadius="@dimen/dimen_10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_20sp"
            android:textColor="@color/black"
            android:text="Upload Files" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:fontFamily="sans-serif-condensed"
            android:drawableLeft="@drawable/user_selfie_pic"
            android:drawablePadding="@dimen/dimen_15dp"
            android:text="Please take your selfie"
            android:textColor="@color/carmine"
            android:textSize="@dimen/dimen_17sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/ivUserSelfie"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dimen_75dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:background="@color/gray_50"
            android:clickable="true"
            android:elevation="@dimen/dimen_4dp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/dimen_5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/camera_svg"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:fontFamily="sans-serif-condensed"
            android:drawableLeft="@drawable/pan_card_svg"
            android:drawablePadding="@dimen/dimen_15dp"
            android:text="Upload Your Employer ID Card"
            android:textColor="@color/carmine"
            android:textSize="@dimen/dimen_17sp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/ivEmployeeId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dimen_75dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:background="@color/gray_50"
            android:clickable="true"
            android:elevation="@dimen/dimen_4dp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/dimen_5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/camera_svg"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:fontFamily="sans-serif-condensed"
            android:drawableLeft="@drawable/id_card_svg"
            android:drawablePadding="@dimen/dimen_15dp"
            android:text="Upload Your Aadhar Card"
            android:textColor="@color/carmine"
            android:textSize="@dimen/dimen_17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/carmine"
                    android:text="Front"/>

                <ImageView
                    android:id="@+id/ivAdharFront"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:background="@color/gray_50"
                    android:clickable="true"
                    android:elevation="@dimen/dimen_4dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="@dimen/dimen_5dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/camera_svg"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/carmine"
                    android:text="Back"/>

                <ImageView
                    android:id="@+id/ivAdharBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:background="@color/gray_50"
                    android:clickable="true"
                    android:elevation="@dimen/dimen_4dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="@dimen/dimen_5dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/camera_svg"
                    tools:ignore="VectorDrawableCompat" />

            </LinearLayout>


        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:fontFamily="sans-serif-condensed"
            android:drawableLeft="@drawable/pan_card_svg"
            android:drawablePadding="@dimen/dimen_15dp"
            android:text="Upload Your PAN Card"
            android:textColor="@color/carmine"
            android:textSize="@dimen/dimen_17sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/ivPanCard"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dimen_75dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:background="@color/gray_50"
            android:clickable="true"
            android:elevation="@dimen/dimen_4dp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/dimen_5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/camera_svg"
            tools:ignore="VectorDrawableCompat" />


       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/btUploadUserFiles"
           android:layout_marginLeft="@dimen/dimen_15dp"
           android:layout_marginRight="@dimen/dimen_15dp"
           android:layout_marginBottom="@dimen/dimen_20dp"
           android:layout_alignParentBottom="true"
           android:layout_centerInParent="true"
           android:background="@drawable/corner_button_background"
           android:clickable="true"
           android:foreground="?attr/selectableItemBackground"
           android:gravity="center"
           android:text="Upload"
           android:textColor="@color/white"
           android:textSize="@dimen/dimen_20sp"
           />






    </LinearLayout>

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/ivbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/phone_bg" />



</FrameLayout>
</androidx.core.widget.NestedScrollView>